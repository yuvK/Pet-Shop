@using CyberpunkPets.Models;
@model Animal
@{
    ViewBag.Title = "Details";
}

<body class="details">
    <h1>@Model.Name Details:</h1>
    <input type="hidden" asp-for="AnimalId" />
    <div class="grid-container">
        <div>
            <img class="detailsPic" src="~/Images/ProfilePics/@Model.PictureName" alt="ProfilePic" asp-append-version="true" height="430" />
        </div>
        <div class="grid-item">
            <h3>Comments:</h3>
            <div>
                @foreach (var comment in Model.Comments!)
                {
                    <ul>
                        @comment.Content
                        <a asp-action="DeleteComment" asp-controller="Animal" asp-route-id="@comment.CommentId"
                       onclick="return confirm('Are you sure you want to delete this comment?')" data-toggle="tooltip" title="Delete Comment">
                            <i class="fa-regular fa-trash-can"
                           style="color:red;padding:2px"></i>
                        </a>
                    </ul>
                }
            </div>
        </div>
        <div class=" grid-item">
            <div>
                <label asp-for="Name"></label>
                <label>@Model.Name</label>
            </div>
            <div>
                <label asp-for="Age"></label>
                <label>@Model.Age</label>
            </div>
            <div>
                <label asp-for="Description"></label>
                <label>@Model.Description</label>
            </div>
            <div>
                <label asp-for="Category!.Name"></label>
                <label>@Model.Category!.Name</label>
            </div>
        </div>
        <div class="grid-item">
            <partial name="_AddCommentform" model="new Comment{AnimalId = Model.AnimalId}" />
        </div>

    </div>

</body>